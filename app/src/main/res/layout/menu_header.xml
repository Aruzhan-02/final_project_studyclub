<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Senıƞ study ortaƞa qajettıƞ barlyğy osynda..."
        android:layout_alignParentBottom="true"
        android:textSize="18dp"
        android:textColor="#313638"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>
    
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StudyClub"
        android:fontFamily="@font/myriadpro_black"
        android:textSize="28dp"
        android:layout_above="@+id/menu_slogan"
        android:layout_marginLeft="15dp"
        android:textColor="#313638"/>
    
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo_just_image"
        android:layout_above="@id/app_name"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>